<div class="top-content">

    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1><strong>Employee </strong> Management App</h1>
                    <div class="description">
                      <p>
                      </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                  <div class="form-top">
                    <div class="form-top-left">
                      <h3>Login</h3>
                    </div>
                    <div class="form-top-right">
                      <i class="fa fa-key"></i>
                    </div>
                    </div>
                    <div class="form-bottom">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"login-form") do |f| %>
                      <div class="form-group">
                        <%= f.label :email, class: "sr-only" %><br />
                        <%= f.email_field :email, autofocus: true, type: "text", placeholder: "Email...", class:"form-username form-control", id: "form-username" %>
                      </div>
                      <div class="form-group">
                        <%= f.label :password, class:"sr-only"%>
                        <%= f.password_field :password, autocomplete: "off", type: "text", placeholder: "Password...", class:"form-password form-control", id: "form-password" %>
                      </div>
                      <button type="submit" class="btn">Sign in!</button>
                      <% end %>
                </div>
              </div>
            </div>
        </div>
    </div>

</div>


<%= render "devise/shared/links" %>
