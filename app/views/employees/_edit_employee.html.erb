  <div class="col-md-10 col-sm-8 col-xs-12 center-form-container">

    <!-- <form class="form-horizontal" role="form"> -->
      <%= form_for [current_user, employee], html: { class: "form-horizontal" } do |f| %>

      <div class="form-group">
        <%= f.label :first_name, class:"col-lg-4 control-label field-labels" %>
        <div class="col-lg-8">
          <%= f.text_field :first_name, class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :last_name, class:"col-lg-4 control-label field-labels" %>
        <div class="col-lg-8">
          <%= f.text_field :last_name, class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class:"col-lg-4 control-label field-labels" %>
        <div class="col-lg-8">
          <%= f.text_field :email, class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :phone_number, class:"col-lg-4 control-label field-labels" %>
        <div class="col-lg-8">
          <%= f.text_field :phone_number, class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :field_category, class:"col-lg-4 control-label field-labels" %>
        <div class="col-lg-8">
          <%= f.text_field :field_category, class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :job_description, class:"col-lg-4 control-label field-labels" %>
        <div class="col-lg-8">
          <%= f.text_field :job_description, class:"form-control" %>
          <%= f.hidden_field :user_id, value: current_user.id %>
        </div>
      </div>

      <!-- <div class="edit-submit-button"> -->
      <div class="form-group form-input-group">
        <div class="col-md-3">
          <%= f.submit "Save", :class => "btn btn-primary employee-submit" %>
        </div>
        <div class="col-md-3 padding-left-5 hidden">
          <input class="btn btn-default" value="Cancel" type="reset">
        </div>
      </div>
    <% end %>
  </div><!--  personal-info-->

</div><!-- end row-->
