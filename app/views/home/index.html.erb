<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<div class="contact-container">
  <div class="row">
      <div class="col-xs-4 col-sm-4">
          <div class="panel panel-default scroll-container">
              <div class="panel-heading c-list">
                  <span class="title">Contacts</span>
                  <ul class="pull-right c-controls">
                      <li><a href="#cant-do-all-the-work-for-you" data-toggle="tooltip" data-placement="top" title="Add Contact"><i class="glyphicon glyphicon-plus add-new-employee"></i></a></li>
                      <!-- <li><a href="#" class="hide-search" data-command="toggle-search" data-toggle="tooltip" data-placement="top" title="Toggle Search"><i class="fa fa-ellipsis-v"></i></a></li> -->
                  </ul>
              </div>

              <div class="row" style="display: none;">
                  <div class="col-xs-12">
                      <div class="input-group c-search">
                          <input type="text" class="form-control" id="contact-list-search">
                          <span class="input-group-btn">
                              <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search text-muted"></span></button>
                          </span>
                      </div>
                  </div>
              </div>

              <ul class="list-group" id="contact-list">
                  <% @employees.each do |e| %>
                  <li class="list-group-item" employee-id="<%=e.id%>">
                      <div class="col-xs-12 col-sm-3">
                          <%= image_tag(e.avatar, class:"img-responsive img-circle")%>
                          <!-- <img src="http://api.randomuser.me/portraits/men/49.jpg" alt="Scott Stevens" class="img-responsive img-circle" /> -->
                      </div>
                      <div class="col-xs-12 col-sm-9">
                          <span class="name"><%="#{e.first_name} #{e.last_name}"%></span><br/>
                          <span class="glyphicon glyphicon-map-marker text-muted c-info" data-toggle="tooltip" title="5842 Hillcrest Rd"></span>
                          <span class="visible-xs"> <span class="text-muted"><%=e.job_description%></span><br/></span>
                          <span class="glyphicon glyphicon-earphone text-muted c-info" data-toggle="tooltip" title="(870) 288-4149"></span>
                          <span class="visible-xs"> <span class="text-muted"><%=e.phone_number%></span><br/></span>
                          <span class="fa fa-comments text-muted c-info" data-toggle="tooltip" title="scott.stevens@example.com"></span>
                          <span class="visible-xs"> <span class="text-muted"><%=e.email%></span><br/></span>
                      </div>
                      <div class="clearfix"></div>
                  </li>
                  <% end %>
              </ul>
          </div><!-- panel panel-default scroll-container -->
      </div><!-- col-xs-6 col-sm-6 -->
      <div class="col-xs-8 col-sm-8">
        <div class="row no-margin ">
          <div class="panel panel-default contact-container-body contact-container-scroll">
            <div class="panel-heading c-list page-profile-header">
              <span class="title"><%= @action %></span>
            </div>
            <%= render "employees/edit_employee", employee: @employee %>

          </div><!-- end contact-container-body-->
        </div>

      </div>
	</div><!-- row -->
</div><!-- container  -->


    <!-- JavaScrip Search Plugin -->
    <script src="//rawgithub.com/stidges/jquery-searchable/master/dist/jquery.searchable-1.0.0.min.js"></script>
